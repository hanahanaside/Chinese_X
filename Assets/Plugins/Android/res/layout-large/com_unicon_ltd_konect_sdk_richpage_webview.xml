<com.unicon_ltd.konect.sdk.FelloRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_unicon_ltd_konect_sdk_notification_popup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/com_unicon_ltd_konect_sdk_halftransparent"
    android:clickable="true" >
    
    <ProgressBar android:id="@+id/com_unicon_ltd_konect_sdk_progress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge" />

    <WebView
        android:id="@+id/com_unicon_ltd_konect_sdk_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:scrollbars="none" />
    
</com.unicon_ltd.konect.sdk.FelloRelativeLayout>